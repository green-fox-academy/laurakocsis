<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Cocktails</title>
  <link rel="stylesheet" type="text/css" href="/static/style.css">
</head>

<body>
  <h1>Cocktails</h1>
  <ul id='alcohollist'>
    <a href="http://localhost:3000/">All</a>
    <% alcohols.forEach(e => { %>
    <a href="/?alcohol=<%= e %>">
      <%= e %>
    </a>
    <% }); %>
  </ul>
  <table>
    <thead>
      <tr>
        <th>Name </th>
        <th>Price </th>
      </tr>
    </thead>
    <tbody>
      <% cocktails.forEach(e => { %>
      <tr>
        <td>
          <%= e.name %>
          <% if(!e.isAlcoholic) {%>
          (non-alcoholic)
          <% }%>
          <p> <%= e.contains %></p>
        </td>
        <td>
          <%= e.price %>
        </td>
        <% }); %>
      </tr>
    </tbody>
  </table>
</body>

</html>